{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.{js,ts}"
  ],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "useESM": true,
      "tsconfig": "tsconfig.test.json"
    }],
    "^.+\\.jsx?$": "babel-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "transformIgnorePatterns": [
    "node_modules/(?!(peggy)/)"
  ],
  "globals": {
    "__DEV__": true
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "projects": [
    {
      "displayName": "node",
      "preset": "ts-jest",
      "testEnvironment": "node",
      "testMatch": ["**/test/node/**/*.test.{js,ts}"],
      "transform": {
        "^.+\\.tsx?$": ["ts-jest", {
          "useESM": true,
          "tsconfig": "tsconfig.test.json"
        }],
        "^.+\\.jsx?$": "babel-jest"
      },
      "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
      "transformIgnorePatterns": [
        "node_modules/(?!(peggy)/)"
      ],
      "extensionsToTreatAsEsm": [".ts"],
      "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
      }
    },
    {
      "displayName": "jsdom",
      "preset": "ts-jest",
      "testEnvironment": "jsdom",
      "testMatch": ["**/test/web/**/*.test.{js,ts}"],
      "transform": {
        "^.+\\.tsx?$": ["ts-jest", {
          "useESM": true,
          "tsconfig": "tsconfig.test.json"
        }],
        "^.+\\.jsx?$": "babel-jest"
      },
      "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
      "transformIgnorePatterns": [
        "node_modules/(?!(peggy)/)"
      ],
      "setupFilesAfterEnv": ["<rootDir>/test/setup/jsdom.setup.js"],
      "extensionsToTreatAsEsm": [".ts"],
      "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
      }
    }
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!src/**/*.d.ts",
    "!src/web-index.ts",
    "!src/types-only.ts",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}